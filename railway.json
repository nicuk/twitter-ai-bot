{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "redis": {
      "image": "redis:alpine"
    }
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install redis && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "NEVER",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "numReplicas": 1
  }
}
